<div class="container seperator-big">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 offset-lg-3 offset-xl-3 fade-medium">
      <div class="card fade-short pb-3">
        <h5 class="card-header text-center">
          <i class="material-icons">
            person
          </i>
          Login
        </h5>
        <div class="card-body">
          <form autocomplete="off" class="pr-3 pl-3">
            <div class="form-group">
              <label for="emnailInput" class="pointer">Email address</label>
              {{input type="email" value=email class="form-control" id="emnailInput" aria-describedby="emailHelp" placeholder="Enter email"}}
              {{#if emailHasError}}
                <div class="validation-error-message fade-medium mt-1">
                  {{emailErrorMessage}}
                </div>
              {{/if}}
            </div>
            <div class="form-group">
              <label for="passwordInput" class="pointer">Password</label>
              {{input type="password" value=password class="form-control" id="passwordInput" placeholder="Enter Password"}}
              {{#if passwordHasError}}
                <div class="validation-error-message fade-medium mt-1">
                  {{passwordErrorMessage}}
                </div>
              {{/if}}
            </div>
            {{#if loginHasError}}
              <div class="validation-error-message fade-medium">
                {{loginErrorMessage}}
              </div>
            {{/if}}
            <button class="btn btn-outline-secondary mt-3 pl-4 pr-4 pt-2 pb-2 float-right pointer" type="submit" {{action "login"}}>Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container seperator-big">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 offset-lg-3 offset-xl-3 fade-medium">
      <div class="card fade-short pb-3">
        <h5 class="card-header text-center">
          <i class="material-icons">
          person
          </i>
          Login
        </h5>
        <div class="card-body">
          <form autocomplete="off">
            <div class="form-group">
              <label for="emnailInput">Email address</label>
              <input type="email" class="form-control" id="emnailInput" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="passwordInput">Password</label>
              <input type="password" class="form-control" id="passwordInput" placeholder="Enter Password">
            </div>
            <button class="btn btn-outline-secondary mt-3 pl-4 pr-4 pt-2 pb-2 float-right pointer" type="submit">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>